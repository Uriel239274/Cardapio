# Variáveis de Ambiente para o Workflow n8n

# Copie este arquivo para .env e configure com seus valores reais

# === CONFIGURAÇÕES DO GOOGLE DRIVE ===
# ID da pasta do Google Drive que será monitorada para novos arquivos
DRIVE_FOLDER_ID=sua_pasta_id_aqui

# ID da pasta onde os arquivos processados serão salvos
OUTPUT_FOLDER_ID=sua_pasta_output_id_aqui

# ID das credenciais do Google Drive OAuth2 criadas no n8n
GOOGLE_DRIVE_CREDENTIALS_ID=suas_credenciais_id_aqui

# === CONFIGURAÇÕES DA API (OPCIONAL) ===
# Endpoint da API que receberá os dados processados
MENU_API_ENDPOINT=http://localhost:3000/api/menu/update

# Token de autenticação para a API (se necessário)
API_TOKEN=seu_token_api_aqui

# === CONFIGURAÇÕES DO WEBHOOK (OPCIONAL) ===
# URL base do n8n para webhooks
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# === CONFIGURAÇÕES DE PROCESSAMENTO ===
# Intervalo de verificação em minutos (padrão: 5)
CHECK_INTERVAL_MINUTES=5

# Tamanho máximo de arquivo em MB (padrão: 50)
MAX_FILE_SIZE_MB=50

# === CONFIGURAÇÕES DE NOTIFICAÇÃO (OPCIONAL) ===
# Email para notificações de erro
NOTIFICATION_EMAIL=seu_email@exemplo.com

# Webhook do Slack para notificações (opcional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/seu/webhook/aqui

